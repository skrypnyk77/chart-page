{
    "include": ["./src/*.ts"],
    "compilerOptions": {
      "lib": ["dom", "es2015"],
      "target": "ES2020",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "strict": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    }
  }
  